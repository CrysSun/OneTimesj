<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/otherreg"
    android:orientation="vertical"
    tools:context="com.bwie.sj.onetime_sj.views.activity.RegActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/reg_back"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/left_jiantou" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/reg_or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingRight="10dp"
            android:text="已有账号?"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/reg_black"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:src="@drawable/reg_middle" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/other_login_background"
        android:orientation="vertical">

        <EditText
            android:id="@+id/reg_account"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:background="@null"
            android:hint="请输入手机号"
            android:textColorHint="#999"
            android:textDirection="@null" />

        <EditText
            android:id="@+id/reg_pwd"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:background="@null"
            android:singleLine="true"
            android:hint="输入大小写和数字,密码不能超过8位"
            android:textColorHint="#999"
            android:textDirection="@null" />

    </LinearLayout>

    <Button
        android:id="@+id/reg_start"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/otherlogin_background"
        android:text="注册" />


    <TextView
        android:id="@+id/reg_youke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="游客登录"
        android:textColor="#fff"
        android:textSize="17sp" />
</LinearLayout>
