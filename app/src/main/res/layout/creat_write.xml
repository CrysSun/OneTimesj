<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bwie.sj.onetime_sj.views.activity.CreatActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/main_head"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/writ_back"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="取消"
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/writ_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="创作"
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/creat_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发表"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/writ_msg"
            android:layout_width="370dp"
            android:layout_height="85dp"
            android:background="@null"
            android:hint="请输入内容,禁止输入色情,暴力等违反国家法律的内容,违者将已封号处理!" />

    </LinearLayout>

    <ImageView
        android:id="@+id/writ_jia"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="120dp"
        android:src="@drawable/raw_1500020546" />

</LinearLayout>
